<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collengine.sulu.rideshare.fragments.CurrentFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edit_profilr_btn"
        android:id="@+id/smiley_btn"
        android:text="Smiley Face Challenge"
        android:textAllCaps="false"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/ninja_btn"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/smiley_btn"
        android:background="@drawable/edit_profilr_btn"
        android:text="Ninja Face Challenge"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_height="40dp"
        android:id="@+id/helmet_btn"
        android:layout_below="@+id/ninja_btn"
        android:text="My Helmet Story"
        android:background="@drawable/edit_profilr_btn"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>
