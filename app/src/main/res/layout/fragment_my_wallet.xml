<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collengine.sulu.rideshare.fragments.MyWalletFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/color_option_menu"
        android:id="@+id/unlock_points_btn"
        android:text="Unlock Bike points"
        android:textAllCaps="false"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"

        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/challenge_points_btn"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/unlock_points_btn"
        android:background="@color/feature_blue"
        android:text="Challenge Points"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"/>

</RelativeLayout>
