<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collengine.sulu.rideshare.fragments.RedeemFragment">

    <ImageView
        android:id="@+id/redeem_bike_store"
        android:layout_width="95dp"
        android:layout_height="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="201dp"
        android:clickable="true"
        android:src="@drawable/migros" />

    <ImageView
        android:id="@+id/redeem_starbucks"
        android:layout_width="97dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:clickable="true"
        android:src="@drawable/imax" />

    <ImageView
        android:id="@+id/redeem_helmet"
        android:layout_width="103dp"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="206dp"
        android:clickable="true"
        android:src="@drawable/helmet" />

    <ImageView
        android:id="@+id/redeem_wallmart"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:src="@drawable/geneveroule" />

</RelativeLayout>
